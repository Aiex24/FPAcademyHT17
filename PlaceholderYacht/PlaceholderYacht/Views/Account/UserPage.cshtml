@model AccountUserpageVM
@section styles{
    <link href="~/Styles/AddBoatStyleSheet.css" rel="stylesheet" />
}

<div class="AddBoatDiv">
    <h1>Userpage @Model.UserName</h1>
    <form asp-action="NewUser" asp-controller="Account">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" />
        <span asp-validation-for="UserName"></span>
        <br />

        <label asp-for="Email"></label>
        <input asp-for="Email" />
        <br />

        <input type="submit" value="Update User" />
    </form>

<br />

    <table>
        <tr>
            <th>BoatName</th>
            <th>ModelName</th>
            <th>Manufacturer</th>
        </tr>
        @foreach (var boat in Model.BoatItem)
            {
            <tr>
                <td>@boat.BoatName</td>
                <td>@boat.ModelName</td>
                <td>@boat.Manufacturer</td>
                <td><input type="button" value="Change" /></td>
                <td><input type="button" value="Delete" /></td>
            </tr>
        }
        <tr>
            <td colspan="2"><a asp-action="AddBoat" asp-controller="Home"><input type="button" value="Add Boat" /></a></td>
        </tr>
    </table>
</div>